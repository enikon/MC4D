<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->

    <style name="AppBaseTheme" parent="android:ThemeOverlay.Material.Dark">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarPopupTheme">@style/SubmenuHeaderStyle</item>
    </style>

    <style name="SubmenuHeaderStyle" parent="android:ThemeOverlay.Material.Dark.ActionBar">
        <item name="android:tint">@color/ss_labels</item> <!-- Arrow Color -->
        <item name="android:colorAccent">@color/ss_text</item>
    </style>

    <!-- Override style.base text color with the Superliminal text color -->
    <style name="base">
        <!-- <item name="android:textColor">@color/ss_text</item> -->
    </style>

    <!-- Application theme. -->
    <style name="SuperliminalTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- <item name="android:textViewStyle">@style/SuperliminalTextViewStyle</item> -->
    </style>

</resources>